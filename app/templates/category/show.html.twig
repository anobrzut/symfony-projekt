{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.category_details'|trans({'%id%': category.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.category_details'|trans({'%id%': category.id|default('')}) }}</h1>

    {% if category is defined %}
        <dl class="row">
            <dt class="col-sm-3">{{ 'label.id'|trans }}</dt>
            <dd class="col-sm-9">{{ category.id }}</dd>

            <dt class="col-sm-3">{{ 'label.title'|trans }}</dt>
            <dd class="col-sm-9">{{ category.title }}</dd>

            <dt class="col-sm-3">{{ 'label.created_at'|trans }}</dt>
            <dd class="col-sm-9">{{ category.createdAt|date('Y/m/d H:i') }}</dd>

            <dt class="col-sm-3">{{ 'label.updated_at'|trans }}</dt>
            <dd class="col-sm-9">{{ category.updatedAt|date('Y/m/d H:i') }}</dd>
        </dl>
        <div class="mt-3">
            <a href="{{ path('category_index') }}" class="btn btn-secondary">{{ 'action.back_to_list'|trans }}</a>
        </div>
    {% else %}
        <div class="alert alert-warning mt-3">{{ 'message.record_not_found'|trans }}</div>
    {% endif %}
{% endblock %}
