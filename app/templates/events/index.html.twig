{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.event_list'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.event_list'|trans }}</h1>

    <div class="mb-3">
        <a href="{{ path('event_create') }}" class="btn btn-success">
            {{ 'action.add_new'|trans }}
        </a>
    </div>

    {% if pagination is defined and pagination.items|length %}

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label.id'|trans, 'events.id', {}) }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.title'|trans, 'events.title', {}) }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.description'|trans, 'events.description', {}) }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.date'|trans, 'events.date', {}) }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.category'|trans, 'events.category', {}) }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.tags'|trans, 'events.tags', {}) }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.created_at'|trans, 'events.createdAt', {}) }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.updated_at'|trans, 'events.updatedAt', {}) }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.author'|trans, 'events.author', {}) }}</th>
                <th>{{ 'label.actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for event in pagination.items %}
                <tr>
                    <td>{{ event.id }}</td>
                    <td>{{ event.title }}</td>
                    <td>{{ event.description }}</td>
                    <td>{{ event.date|format_date('long') }}</td>
                    <td>{{ event.category.title }}</td>
                    <td>
                        {% for tag in event.tags %}
                            <span class="badge bg-secondary">{{ tag.title }}</span>
                        {% endfor %}
                    </td>
                    <td>{{ event.createdAt|format_date('long') }}</td>
                    <td>{{ event.updatedAt|format_date('long') }}</td>
                    <td>{{ event.author ? event.author.username : 'N/A' }}</td>
                    <td>
                        {% if is_granted('VIEW', event) %}
                            <a class="btn btn-outline-primary btn-sm" href="{{ url('event_show', {id: event.id}) }}" title="{{ 'action.show'|trans }}">
                                <i class="bi bi-eye"></i> {{ 'action.show'|trans }}
                            </a>
                        {% endif %}
                        {% if is_granted('EDIT', event) %}
                            <a class="btn btn-outline-success btn-sm" href="{{ url('event_edit', {id: event.id}) }}" title="{{ 'action.edit'|trans }}">
                                <i class="bi bi-pencil"></i> {{ 'action.edit'|trans }}
                            </a>
                        {% endif %}
                        {% if is_granted('DELETE', event) %}
                            <a class="btn btn-outline-danger btn-sm" href="{{ url('event_delete', {id: event.id}) }}" title="{{ 'action.delete'|trans }}" onclick="return confirm('{{ 'message.confirm_delete'|trans }}');">
                                <i class="bi bi-trash"></i> {{ 'action.delete'|trans }}
                            </a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <div class="alert alert-info">
            {{ 'message.empty_list'|trans }}
        </div>
    {% endif %}
{% endblock %}