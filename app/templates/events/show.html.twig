{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.event_details'|trans({'%id%': event.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.event_details'|trans({'%id%': event.id|default('')}) }}</h1>

    {% if event is defined %}
        <dl class="row">
            <dt class="col-sm-3">{{ 'label.id'|trans }}</dt>
            <dd class="col-sm-9">{{ event.id }}</dd>

            <dt class="col-sm-3">{{ 'label.title'|trans }}</dt>
            <dd class="col-sm-9">{{ event.title }}</dd>

            <dt class="col-sm-3">{{ 'label.description'|trans }}</dt>
            <dd class="col-sm-9">{{ event.description }}</dd>

            <dt class="col-sm-3">{{ 'label.date'|trans }}</dt>
            <dd class="col-sm-9">{{ event.date|date('Y/m/d H:i') }}</dd>

            <dt class="col-sm-3">{{ 'label.category'|trans }}</dt>
            <dd class="col-sm-9">{{ event.category.title }}</dd>

            <dt class="col-sm-3">{{ 'label.tags'|trans }}</dt>
            <dd class="col-sm-9">
                {% for tag in event.tags %}
                    <span class="badge bg-secondary">{{ tag.title }}</span>
                {% endfor %}
            </dd>

            <dt class="col-sm-3">{{ 'label.author'|trans }}</dt>
            <dd class="col-sm-9">{{ event.author ? event.author.username : 'N/A' }}</dd>

            <dt class="col-sm-3">{{ 'label.created_at'|trans }}</dt>
            <dd class="col-sm-9">{{ event.createdAt|date('Y/m/d H:i') }}</dd>

            <dt class="col-sm-3">{{ 'label.updated_at'|trans }}</dt>
            <dd class="col-sm-9">{{ event.updatedAt|date('Y/m/d H:i') }}</dd>
        </dl>
        <div class="mt-3">
            <a href="{{ path('event_index') }}" class="btn btn-secondary">{{ 'action.back_to_list'|trans }}</a>
        </div>
    {% else %}
        <div class="alert alert-warning mt-3">{{ 'message.record_not_found'|trans }}</div>
    {% endif %}
{% endblock %}
