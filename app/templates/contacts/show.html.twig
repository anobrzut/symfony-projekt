{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.contact_details'|trans({'%id%': contact.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.contact_details'|trans({'%id%': contact.id|default('')}) }}</h1>
    {% if contact is defined %}
        <dl class="dl-horizontal">
            <dt>{{ 'label.id'|trans }}</dt>
            <dd>{{ contact.id }}</dd>
            <dt>{{ 'label.name'|trans }}</dt>
            <dd>{{ contact.name }}</dd>
            <dt>{{ 'label.phone'|trans }}</dt>
            <dd>{{ contact.phone }}</dd>
            <dt>{{ 'label.description'|trans }}</dt>
            <dd>{{ contact.description }}</dd>
            <dt>{{ 'label.tags'|trans }}</dt>
            <dd>
                {% for tag in contact.tags %}
                    {{ tag.title }}{% if not loop.last %}, {% endif %}
                {% endfor %}
            </dd>
            <dt>{{ 'label.created_at'|trans }}</dt>
            <dd>{{ contact.createdAt|date('Y/m/d H:i') }}</dd>
            <dt>{{ 'label.updated_at'|trans }}</dt>
            <dd>{{ contact.updatedAt|date('Y/m/d H:i') }}</dd>
        </dl>
        <p>
            <a href="{{ url('contacts_index') }}" title="{{ 'action.back_to_list'|trans }}">
                {{ 'action.back_to_list'|trans }}
            </a>
        </p>
    {% else %}
        <p>
            {{ 'message.record_not_found'|trans }}
        </p>
    {% endif %}
{% endblock %}
