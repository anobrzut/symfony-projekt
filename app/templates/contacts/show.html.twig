{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.contact_details'|trans({'%id%': contact.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.contact_details'|trans({'%id%': contact.id|default('')}) }}</h1>

    {% if contact is defined %}
        <dl class="row">
            <dt class="col-sm-3">{{ 'label.id'|trans }}</dt>
            <dd class="col-sm-9">{{ contact.id }}</dd>

            <dt class="col-sm-3">{{ 'label.name'|trans }}</dt>
            <dd class="col-sm-9">{{ contact.name }}</dd>

            <dt class="col-sm-3">{{ 'label.phone'|trans }}</dt>
            <dd class="col-sm-9">{{ contact.phone }}</dd>

            <dt class="col-sm-3">{{ 'label.description'|trans }}</dt>
            <dd class="col-sm-9">{{ contact.description }}</dd>

            <dt class="col-sm-3">{{ 'label.tags'|trans }}</dt>
            <dd class="col-sm-9">
                {% for tag in contact.tags %}
                    {{ tag.title }}{% if not loop.last %}, {% endif %}
                {% endfor %}
            </dd>

            <dt class="col-sm-3">{{ 'label.created_at'|trans }}</dt>
            <dd class="col-sm-9">{{ contact.createdAt|date('Y/m/d H:i') }}</dd>

            <dt class="col-sm-3">{{ 'label.updated_at'|trans }}</dt>
            <dd class="col-sm-9">{{ contact.updatedAt|date('Y/m/d H:i') }}</dd>
        </dl>
        <div class="mt-3">
            <a href="{{ path('contacts_index') }}" class="btn btn-secondary">{{ 'action.back_to_list'|trans }}</a>
        </div>
    {% else %}
        <div class="alert alert-warning mt-3">{{ 'message.record_not_found'|trans }}</div>
    {% endif %}
{% endblock %}
