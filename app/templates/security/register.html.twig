{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.register'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.register'|trans }}</h1>

    {{ form_start(form) }}

    {% if not form.vars.valid %}
        <div class="alert alert-danger">
            {{ 'message.form_error'|trans }}
        </div>

        <ul>
            {% for error in form.vars.errors %}
                <li>{{ error.message|trans }}</li>
            {% endfor %}
        </ul>
    {% endif %}

    {% for field in form %}
        {# Render only non-hidden fields #}
        {% if 'hidden' not in field.vars.block_prefixes %}
            <div class="form-group{% if field.vars.required %} required{% endif %}">
                {{ form_label(field) }}
                {{ form_widget(field) }}
                {{ form_errors(field) }}
            </div>
        {% endif %}
    {% endfor %}

    <button class="btn btn-primary">{{ 'action.register'|trans }}</button>

    {{ form_end(form) }}
{% endblock %}
